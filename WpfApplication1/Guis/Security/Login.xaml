<UserControl x:Class="WpfApplication1.Guis.Security.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <StackPanel>
        <TextBlock>
            <Label Content="Ident:" Margin="5,5" Width="75"/>
            <TextBox Name="txtUsername" Margin="5,5 " Width="200"/>
        </TextBlock>
        <TextBlock>
             <Label Content="Passwort:" Margin="5,5" Width="75"/>
            <PasswordBox Name="txtPassword" Margin="5,5 " Width="200"/>
        </TextBlock>
        <Button Content="Login"  /> 
    </StackPanel>
</UserControl>
